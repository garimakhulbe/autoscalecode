FROM ubuntu:14.04

# make sure apt is up to date
RUN apt-get update

# install nodejs and npm
RUN apt-get install -y git git-core nodejs npm default-jdk

RUN rm -rf azure-template; true
RUN git clone https://github.com/garimakhulbe/azure-template.git
RUN dd if=/dev/urandom of=1GB.bin bs=64M count=16 iflag=fullblock
